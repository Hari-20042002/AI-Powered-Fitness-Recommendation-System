# .env.example - Template for team setup (commit this to git)

# Service Ports
USER_SERVICE_PORT=8081
ACTIVITY_SERVICE_PORT=8082
AI_SERVICE_PORT=8083
GATEWAY_PORT=8080
EUREKA_PORT=8761

# PostgreSQL (User Service)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fitness_user_db
POSTGRES_USERNAME=fitness_user
POSTGRES_PASSWORD=your_postgres_password_here

# MongoDB (Activity & AI Services)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_ACTIVITY_DB=fitnessactivity
MONGODB_AI_DB=fitnessrecommendation
MONGODB_USERNAME=your_mongodb_username
MONGODB_PASSWORD=your_mongodb_password

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=your_rabbitmq_password

# Frontend Variables (must start with VITE_ for Vite to expose them)
VITE_OAUTH2_CLIENT_ID=oauth2-pkce-client
VITE_OAUTH2_AUTH_ENDPOINT=http://127.0.0.1:8181/realms/fitness-oauth2/protocol/openid-connect/auth
VITE_OAUTH2_TOKEN_ENDPOINT=http://127.0.0.1:8181/realms/fitness-oauth2/protocol/openid-connect/token
VITE_OAUTH2_REDIRECT_URI=http://localhost:5173
VITE_OAUTH2_SCOPE=openid profile email offline_access

# Frontend API URLs
VITE_API_GATEWAY_URL=http://localhost:8080
VITE_USER_SERVICE_URL=http://localhost:8081
VITE_ACTIVITY_SERVICE_URL=http://localhost:8082
VITE_AI_SERVICE_URL=http://localhost:8083

# Keycloak
KEYCLOAK_PORT=8181
KEYCLOAK_REALM=fitness-oauth2

# External APIs (sensitive - get these from your provider)
GEMINI_API_URL=your_gemini_api_url_here
GEMINI_API_KEY=your_gemini_api_key_here